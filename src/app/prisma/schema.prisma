generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  published Boolean @default(false)
  authorId  Int
  author    UserTest    @relation(fields: [authorId], references: [id])
}

model UserTest {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  posts Post[]
}
